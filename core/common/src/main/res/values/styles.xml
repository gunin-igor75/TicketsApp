<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="sfProDisplayBold">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>
    <style name="sfProDisplayBold.22sp">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="sfProDisplayBold.20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="sfProDisplayBold.16sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sfProDisplayBold.14sp">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="sfProDisplayMedium">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>
    <style name="sfProDisplayMedium.16sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sfProDisplayMedium.14sp">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sfProDisplayRegular">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>
    <style name="sfProDisplayRegular.16sp">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="sfProDisplayRegular.14sp">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="sfProDisplayRegular.10sp">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="sfProDisplaySemBoldItalic">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_semibold_italic</item>
    </style>

    <style name="sfProDisplaySemBoldItalic.16sp">
        <item name="android:textSize">16sp</item>
        <item name="fontStyle">italic</item>
    </style>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- border color -->
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="cursorColor">@color/white</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/gray_1</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/gray_1</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ButtonTickets">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/card_grey</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textCapWords</item>
    </style>





    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>


</resources>