<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBack"
            style="@style/ChoiceCountrySelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            app:chipIcon="@drawable/ic_add" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDateToday"
            style="@style/ChoiceCountrySelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_1x"
            android:text="@string/date_example" />

        <com.google.android.material.chip.Chip
            android:id="@+id/hipCountPeople"
            style="@style/ChoiceCountrySelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_1x"
            android:text="@string/text_type_tickets_economy"
            app:chipIcon="@drawable/ic_profile_smail" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFilter"
            style="@style/ChoiceCountrySelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_1x"
            android:text="@string/type_tickets_filter"
            app:chipIcon="@drawable/ic_filter" />
    </LinearLayout>

</HorizontalScrollView>